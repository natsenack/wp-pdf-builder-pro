{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      },
      "ignore": [
        "**/vendor/**"
      ]
    },
    {
      "name": "Launch WordPress",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/index.php",
      "cwd": "${workspaceFolder}",
      "port": 9003,
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes"
      ],
      "env": {
        "XDEBUG_MODE": "debug",
        "XDEBUG_CONFIG": "idekey=VSCODE"
      }
    }
  ]
}