        "color": "#007cba",
        "fontSize": 24,
        "fontWeight": "bold"
      }
    },
    {
      "id": "numero",
      "type": "dynamic-text",
      "x": 550,
      "y": 50,
      "width": 194,
      "height": 30,
      "properties": {
        "text": "N° [NUMERO]",
        "color": "#333333",
        "fontSize": 14,
        "textAlign": "right"
      }
    },
    {
      "id": "ligne-sep",
      "type": "line",
      "x": 50,
      "y": 100,
      "width": 694,
      "height": 2,
      "properties": {
        "strokeColor": "#007cba",
        "strokeWidth": 2
      }
    },
    {
      "id": "info-entreprise",
      "type": "company_info",
      "x": 50,
      "y": 120,
      "width": 300,
      "height": 60,
      "properties": {
        "text": "[NOM_ENTREPRISE]\n[ADRESSE]",
        "color": "#333333",
        "fontSize": 12
      }
    },
    {
      "id": "info-client",
      "type": "customer_info",
      "x": 400,
      "y": 120,
      "width": 300,
      "height": 60,
      "properties": {
        "text": "Facturé à:\n[NOM_CLIENT]\n[ADRESSE_CLIENT]",
        "color": "#333333",
        "fontSize": 12
      }
    },
    {
      "id": "tableau-produits",
      "type": "product_table",
      "x": 50,
      "y": 200,
      "width": 694,
      "height": 200,
      "properties": {
        "backgroundColor": "#f8f9fa",
        "borderColor": "#dee2e6",
        "borderWidth": 1,
        "columns": [
          {"name": "Description", "width": 50},
          {"name": "Prix", "width": 25},
          {"name": "Total", "width": 25}
        ]
      }
    },
    {
      "id": "total",
      "type": "dynamic-text",
      "x": 550,
      "y": 420,
      "width": 194,
      "height": 30,
      "properties": {
        "text": "TOTAL: [MONTANT_TOTAL] €",
        "color": "#007cba",
        "fontSize": 16,
        "fontWeight": "bold",
        "textAlign": "right"
