    {
      "id": "footer-text-invoice",
      "type": "text",
      "x": 40,
      "y": 810,
      "width": 515,
      "height": 30,
      "content": "Merci pour votre confiance • {{company_name}} • SIRET: {{company_siret}} • {{company_email}}",
      "fontSize": 9,
      "fontFamily": "Helvetica",
      "color": "#ecf0f1",
      "textAlign": "center",
      "lineHeight": 1.2
    }
