  "variables": {
    "company_name": {
      "type": "text",
      "default": "Entreprise SARL",
      "required": true,
      "label": "Nom de l'entreprise"
    },
    "company_address": {
      "type": "textarea",
      "default": "123 Rue de l'Entreprise\n75001 Paris\nFrance",
      "required": true,
      "label": "Adresse de l'entreprise"
    },
    "company_phone": {
      "type": "text",
      "default": "01 23 45 67 89",
      "required": false,
      "label": "Téléphone de l'entreprise"
    },
    "company_email": {
      "type": "email",
      "default": "facturation@entreprise.com",
      "required": true,
      "label": "Email de l'entreprise"
    },
    "company_siret": {
      "type": "text",
      "default": "123 456 789 00012",
      "required": false,
      "label": "Numéro SIRET"
    },
    "customer_name": {
      "type": "text",
      "default": "Client Entreprise SARL",
      "required": true,
      "label": "Nom du client"
    },
    "customer_address": {
      "type": "textarea",
      "default": "456 Avenue des Clients\n69000 Lyon\nFrance",
      "required": true,
      "label": "Adresse du client"
    },
    "order_number": {
      "type": "text",
      "default": "INV-2025-001",
      "required": true,
      "label": "Numéro de facture"
    },
    "current_date": {
      "type": "date",
      "default": "04/11/2025",
      "required": true,
      "label": "Date de facturation"
    },
    "due_date": {
      "type": "date",
      "default": "04/12/2025",
      "required": false,
      "label": "Date d'échéance"
    },
    "payment_terms": {
      "type": "text",
      "default": "30 jours",
      "required": false,
      "label": "Conditions de paiement"
    },
    "product_1_name": {
      "type": "text",
      "default": "Service de consultation",
      "required": false,
      "label": "Nom du produit 1"
    },
    "product_1_quantity": {
      "type": "number",
      "default": "1",
      "required": false,
      "label": "Quantité produit 1"
    },
    "product_1_price": {
      "type": "text",
      "default": "500,00 €",
      "required": false,
      "label": "Prix produit 1"
    },
    "product_1_total": {
      "type": "text",
      "default": "500,00 €",
      "required": false,
      "label": "Total produit 1"
    },
    "product_2_name": {
      "type": "text",
      "default": "Produit complémentaire",
      "required": false,
      "label": "Nom du produit 2"
    },
    "product_2_quantity": {
      "type": "number",
      "default": "2",
      "required": false,
      "label": "Quantité produit 2"
    },
    "product_2_price": {
      "type": "text",
      "default": "150,00 €",
      "required": false,
      "label": "Prix produit 2"
    },
    "product_2_total": {
      "type": "text",
      "default": "300,00 €",
      "required": false,
      "label": "Total produit 2"
    },
    "product_3_name": {
      "type": "text",
      "default": "Frais de port",
      "required": false,
      "label": "Nom du produit 3"
    },
    "product_3_quantity": {
      "type": "number",
      "default": "1",
      "required": false,
      "label": "Quantité produit 3"
    },
    "product_3_price": {
      "type": "text",
      "default": "15,00 €",
      "required": false,
      "label": "Prix produit 3"
    },
    "product_3_total": {
      "type": "text",
      "default": "15,00 €",
      "required": false,
      "label": "Total produit 3"
    },
    "subtotal": {
      "type": "text",
      "default": "815,00 €",
      "required": false,
      "label": "Sous-total HT"
    },
    "tax_rate": {
      "type": "number",
      "default": "20",
      "required": false,
      "label": "Taux de TVA (%)"
    },
    "tax_amount": {
      "type": "text",
      "default": "163,00 €",
      "required": false,
      "label": "Montant TVA"
    },
    "order_total": {
      "type": "text",
      "default": "978,00 €",
      "required": true,
      "label": "Total TTC"
    }
  }
}