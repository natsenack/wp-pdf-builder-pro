    "variables": {
        "company_name": {
            "type": "text",
            "default": "Entreprise SARL",
            "required": true,
            "label": "Nom de l'entreprise"
        },
        "company_address": {
            "type": "textarea",
            "default": "123 Rue de l'Entreprise\n75001 Paris\nFrance",
            "required": true,
            "label": "Adresse de l'entreprise"
        },
        "company_phone": {
            "type": "text",
            "default": "01 23 45 67 89",
            "required": false,
            "label": "Téléphone de l'entreprise"
        },
        "company_email": {
            "type": "email",
            "default": "contact@entreprise.com",
            "required": true,
            "label": "Email de l'entreprise"
        },
        "company_iban": {
            "type": "text",
            "default": "FR76 1234 5678 9012 3456 7890 123",
            "required": false,
            "label": "IBAN de l'entreprise"
        },
        "company_bic": {
            "type": "text",
            "default": "BNPAFRPP",
            "required": false,
            "label": "BIC de l'entreprise"
        },
        "customer_name": {
