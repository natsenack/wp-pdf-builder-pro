            "x": 40,
            "y": 400,
            "width": 515,
            "height": 25,
            "fillColor": "#ffffff",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1
        },
        {
            "id": "product-3-quote",
            "type": "text",
            "x": 45,
            "y": 405,
            "width": 505,
            "height": 20,
            "content": "{{product_3_name}}\t\t\t\t\t\t{{product_3_quantity}}\t\t{{product_3_price}}\t\t{{product_3_total}}",
            "fontSize": 10,
            "fontFamily": "Helvetica",
            "color": "#333333",
            "textAlign": "left"
        },
        {
            "id": "quote-total-box",
            "type": "rectangle",
            "x": 300,
            "y": 650,
            "width": 255,
            "height": 100,
            "fillColor": "#f8f9fa",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1,
            "borderRadius": 6
        },
        {
            "id": "quote-total-label",
            "type": "text",
            "x": 320,
            "y": 670,
            "width": 100,
            "height": 20,
            "content": "MONTANT TOTAL",
            "fontSize": 14,
            "fontFamily": "Helvetica",
            "fontWeight": "bold",
            "color": "#27ae60"
        },
        {
            "id": "quote-total-amount",
            "type": "text",
            "x": 450,
            "y": 670,
            "width": 85,
            "height": 20,
            "content": "{{quote_total}}",
            "fontSize": 16,
            "fontFamily": "Helvetica",
            "fontWeight": "bold",
            "color": "#27ae60",
            "textAlign": "right"
        },
        {
            "id": "quote-note",
            "type": "text",
            "x": 320,
            "y": 695,
            "width": 215,
            "height": 40,
            "content": "TVA non applicable\nart. 293 B du CGI",
            "fontSize": 10,
            "fontFamily": "Helvetica",
            "color": "#6c757d",
            "textAlign": "center",
            "lineHeight": 1.2
        },
        {
            "id": "conclusion",
            "type": "text",
            "x": 40,
            "y": 580,
            "width": 515,
            "height": 60,
            "content": "Nous restons à votre disposition pour toute question relative à ce devis.\n\nPour accepter ce devis, veuillez nous retourner un exemplaire signé ou nous contacter.",
            "fontSize": 11,
            "fontFamily": "Helvetica",
            "color": "#495057",
            "textAlign": "left",
            "lineHeight": 1.4
        },
        {
            "id": "footer-quote",
            "type": "rectangle",
            "x": 0,
            "y": 800,
            "width": 595,
            "height": 42,
            "fillColor": "#27ae60",
            "strokeColor": "#27ae60",
            "strokeWidth": 0
        },
        {
            "id": "footer-text-quote",
            "type": "text",
            "x": 40,
            "y": 810,
            "width": 515,
            "height": 30,
            "content": "{{company_name}} • {{company_address}} • {{company_phone}} • {{company_email}} • SIRET: {{company_siret}}",
            "fontSize": 9,
            "fontFamily": "Helvetica",
            "color": "#ffffff",
            "textAlign": "center",
            "lineHeight": 1.2
        }
    ],
    "variables": {
        "company_name": {
            "type": "text",
            "default": "Votre Société",
            "required": true,
            "label": "Nom de l'entreprise"
        },
        "company_tagline": {
            "type": "text",
            "default": "Excellence et qualité à votre service",
            "required": false,
            "label": "Slogan de l'entreprise"
        },
        "company_address": {
            "type": "textarea",
            "default": "123 Rue de l'Entreprise\n75001 Paris\nFrance",
            "required": true,
            "label": "Adresse de l'entreprise"
        },
        "company_phone": {
            "type": "text",
            "default": "01 23 45 67 89",
            "required": false,
            "label": "Téléphone de l'entreprise"
        },
        "company_email": {
            "type": "email",
            "default": "contact@votresociete.com",
            "required": true,
            "label": "Email de l'entreprise"
        },
        "company_siret": {
            "type": "text",
            "default": "123 456 789 00012",
            "required": false,
            "label": "Numéro SIRET"
        },
        "customer_name": {
            "type": "text",
            "default": "Monsieur Dupont",
            "required": true,
            "label": "Nom du client"
        },
        "customer_address": {
            "type": "textarea",
            "default": "456 Avenue des Clients\n69000 Lyon\nFrance",
            "required": true,
            "label": "Adresse du client"
        },
        "customer_email": {
            "type": "email",
            "default": "client@email.com",
            "required": false,
            "label": "Email du client"
        },
        "customer_phone": {
            "type": "text",
            "default": "06 12 34 56 78",
            "required": false,
            "label": "Téléphone du client"
        },
        "quote_number": {
            "type": "text",
            "default": "DEV-2025-001",
            "required": true,
            "label": "Numéro du devis"
        },
        "current_date": {
            "type": "date",
            "default": "04\/11\/2025",
            "required": true,
            "label": "Date du devis"
        },
        "validity_date": {
            "type": "date",
            "default": "04\/12\/2025",
            "required": false,
            "label": "Date de validité"
        },
        "quote_conditions": {
            "type": "text",
            "default": "30 jours",
            "required": false,
            "label": "Conditions du devis"
        },
        "product_1_name": {
            "type": "text",
            "default": "Service de consultation",
            "required": false,
            "label": "Nom du produit 1"
        },
        "product_1_quantity": {
            "type": "number",
            "default": "1",
            "required": false,
            "label": "Quantité produit 1"
        },
        "product_1_price": {
            "type": "text",
            "default": "500,00 €",
            "required": false,
            "label": "Prix produit 1"
        },
        "product_1_total": {
            "type": "text",
            "default": "500,00 €",
            "required": false,
            "label": "Total produit 1"
        },
        "product_2_name": {
            "type": "text",
            "default": "Produit complémentaire",
            "required": false,
            "label": "Nom du produit 2"
        },
        "product_2_quantity": {
