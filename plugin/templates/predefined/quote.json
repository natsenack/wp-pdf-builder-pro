{
    "name": "Quote",
    "description": "Template spécialisé pour les devis avec mise en page professionnelle",
    "category": "quote",
    "tags": [
        "devis",
        "commercial",
        "professionnel"
    ],
    "version": "1.0.0",
    "canvasWidth": 595,
    "canvasHeight": 842,
    "orientation": "portrait",
    "isPremium": false,
    "previewImage": "\/wp-content\/plugins\/wp-pdf-builder-pro\/templates\/predefined\/quote-preview.png",
    "elements": [
        {
            "id": "header-quote",
            "type": "rectangle",
            "x": 0,
            "y": 0,
            "width": 595,
            "height": 120,
            "fillColor": "#27ae60",
            "strokeColor": "#27ae60",
            "strokeWidth": 0
        },
        {
            "id": "company-name-quote",
            "type": "text",
            "x": 40,
            "y": 40,
            "width": 300,
            "height": 30,
            "content": "{{company_name}}",
            "fontSize": 24,
            "fontFamily": "Helvetica",
            "fontWeight": "bold",
            "color": "#ffffff",
            "textAlign": "left"
        },
        {
            "id": "company-tagline",
            "type": "text",
            "x": 40,
            "y": 70,
            "width": 300,
            "height": 20,
            "content": "{{company_tagline}}",
            "fontSize": 12,
            "fontFamily": "Helvetica",
            "color": "#ecf0f1",
            "textAlign": "left"
        },
        {
            "id": "quote-box",
            "type": "rectangle",
            "x": 350,
            "y": 30,
            "width": 200,
            "height": 60,
            "fillColor": "#2ecc71",
            "strokeColor": "#2ecc71",
            "strokeWidth": 0,
            "borderRadius": 8
        },
        {
            "id": "quote-title",
            "type": "text",
            "x": 360,
            "y": 40,
            "width": 180,
            "height": 20,
            "content": "DEVIS",
            "fontSize": 18,
            "fontFamily": "Helvetica",
            "fontWeight": "bold",
            "color": "#ffffff",
            "textAlign": "center"
        },
        {
            "id": "quote-number",
            "type": "text",
            "x": 360,
            "y": 60,
            "width": 180,
            "height": 15,
            "content": "N° {{quote_number}}",
            "fontSize": 12,
            "fontFamily": "Helvetica",
            "color": "#ffffff",
            "textAlign": "center"
        },
        {
            "id": "quote-date",
            "type": "text",
            "x": 360,
            "y": 75,
            "width": 180,
            "height": 15,
            "content": "Date: {{current_date}}",
            "fontSize": 10,
            "fontFamily": "Helvetica",
            "color": "#ecf0f1",
            "textAlign": "center"
        },
        {
            "id": "client-section-quote",
            "type": "rectangle",
            "x": 40,
            "y": 140,
            "width": 250,
            "height": 100,
            "fillColor": "#f8f9fa",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1,
            "borderRadius": 6
        },
        {
            "id": "client-label-quote",
            "type": "text",
            "x": 50,
            "y": 150,
            "width": 230,
            "height": 20,
            "content": "DESTINATAIRE",
            "fontSize": 12,
            "fontFamily": "Helvetica",
            "fontWeight": "bold",
            "color": "#27ae60"
        },
        {
            "id": "client-info-quote",
            "type": "text",
            "x": 50,
            "y": 170,
            "width": 230,
            "height": 60,
            "content": "{{customer_name}}\n{{customer_address}}\n{{customer_email}}\n{{customer_phone}}",
            "fontSize": 11,
            "fontFamily": "Helvetica",
            "color": "#495057",
            "lineHeight": 1.3
        },
        {
            "id": "validity-section",
            "type": "rectangle",
            "x": 305,
            "y": 140,
            "width": 250,
            "height": 100,
            "fillColor": "#f8f9fa",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1,
            "borderRadius": 6
        },
        {
            "id": "validity-label",
            "type": "text",
            "x": 315,
            "y": 150,
            "width": 230,
            "height": 20,
            "content": "VALIDITÉ DU DEVIS",
            "fontSize": 12,
            "fontFamily": "Helvetica",
            "fontWeight": "bold",
            "color": "#27ae60"
        },
        {
            "id": "validity-info",
            "type": "text",
            "x": 315,
            "y": 170,
            "width": 230,
            "height": 60,
            "content": "Valable jusqu'au: {{validity_date}}\n\nConditions: {{quote_conditions}}",
            "fontSize": 11,
            "fontFamily": "Helvetica",
            "color": "#495057",
            "lineHeight": 1.3
        },
        {
            "id": "introduction",
            "type": "text",
            "x": 40,
            "y": 260,
            "width": 515,
            "height": 40,
            "content": "Cher {{customer_name}},\n\nSuite à notre échange, nous avons le plaisir de vous soumettre le devis suivant:",
            "fontSize": 12,
            "fontFamily": "Helvetica",
            "color": "#333333",
            "textAlign": "left",
            "lineHeight": 1.4
        },
