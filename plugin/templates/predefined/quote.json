        },
        "product_3_quantity": {
            "type": "number",
            "default": "1",
            "required": false,
            "label": "Quantité produit 3"
        },
        "product_3_price": {
            "type": "text",
            "default": "75,00 €",
            "required": false,
            "label": "Prix produit 3"
        },
        "product_3_total": {
            "type": "text",
