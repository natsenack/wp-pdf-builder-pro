{
    "name": "Classic",
    "description": "Template classique professionnel avec en-tête et pied de page",
    "category": "business",
    "tags": [
        "professionnel",
        "classique",
        "entreprise"
    ],
    "version": "1.0.0",
    "isPremium": false,
    "previewImage": "\/wp-content\/plugins\/wp-pdf-builder-pro\/templates\/predefined\/classic-preview.png",
    "template": {
        "canvasWidth": 595,
        "canvasHeight": 842,
        "orientation": "portrait",
        "elements": [
        {
            "id": "header-rect",
            "type": "rectangle",
            "x": 20,
            "y": 20,
            "width": 555,
            "height": 80,
            "fillColor": "#f8f9fa",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1,
            "borderRadius": 4
        },
        {
            "id": "company-name",
            "type": "text",
            "x": 40,
            "y": 35,
            "width": 300,
            "height": 30,
            "content": "{{company_name}}",
            "fontSize": 18,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529",
            "textAlign": "left"
        },
        {
            "id": "company-address",
            "type": "text",
            "x": 40,
            "y": 65,
            "width": 300,
            "height": 20,
            "content": "{{company_address}}",
            "fontSize": 12,
            "fontFamily": "Arial",
            "color": "#6c757d",
            "textAlign": "left"
        },
        {
            "id": "invoice-title",
            "type": "text",
            "x": 200,
            "y": 120,
            "width": 200,
            "height": 40,
            "content": "FACTURE",
            "fontSize": 24,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529",
            "textAlign": "center"
        },
        {
            "id": "invoice-number",
            "type": "text",
            "x": 400,
            "y": 140,
            "width": 150,
            "height": 20,
            "content": "N° {{order_number}}",
            "fontSize": 14,
            "fontFamily": "Arial",
            "color": "#6c757d",
            "textAlign": "right"
        },
        {
            "id": "client-info-rect",
            "type": "rectangle",
            "x": 40,
            "y": 180,
            "width": 250,
            "height": 80,
            "fillColor": "#ffffff",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1,
            "borderRadius": 4
        },
        {
            "id": "client-label",
            "type": "text",
            "x": 50,
            "y": 185,
            "width": 100,
            "height": 20,
            "content": "Client :",
            "fontSize": 12,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529"
        },
        {
            "id": "client-name",
            "type": "text",
            "x": 50,
            "y": 205,
            "width": 230,
            "height": 20,
            "content": "{{customer_name}}",
            "fontSize": 14,
            "fontFamily": "Arial",
            "color": "#212529"
        },
        {
            "id": "client-address",
            "type": "text",
            "x": 50,
            "y": 225,
            "width": 230,
            "height": 35,
            "content": "{{customer_address}}",
            "fontSize": 12,
            "fontFamily": "Arial",
            "color": "#6c757d"
        },
        {
            "id": "date-info",
            "type": "text",
            "x": 350,
            "y": 185,
            "width": 200,
            "height": 20,
            "content": "Date : {{current_date}}",
            "fontSize": 12,
            "fontFamily": "Arial",
            "color": "#6c757d",
            "textAlign": "right"
        },
        {
            "id": "table-header",
            "type": "rectangle",
            "x": 40,
            "y": 280,
            "width": 515,
            "height": 25,
            "fillColor": "#e9ecef",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1
        },
        {
            "id": "table-header-description",
            "type": "text",
            "x": 45,
            "y": 285,
            "width": 200,
            "height": 15,
            "content": "Description",
            "fontSize": 12,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529"
        },
        {
            "id": "table-header-qty",
            "type": "text",
            "x": 350,
            "y": 285,
            "width": 60,
            "height": 15,
            "content": "Qté",
            "fontSize": 12,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529",
            "textAlign": "center"
        },
        {
            "id": "table-header-price",
            "type": "text",
            "x": 420,
            "y": 285,
            "width": 80,
            "height": 15,
            "content": "Prix",
            "fontSize": 12,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529",
            "textAlign": "right"
        },
        {
            "id": "table-header-total",
            "type": "text",
            "x": 510,
            "y": 285,
            "width": 40,
            "height": 15,
            "content": "Total",
            "fontSize": 12,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529",
            "textAlign": "right"
        },
        {
            "id": "product-1-description",
            "type": "text",
            "x": 45,
            "y": 315,
            "width": 200,
            "height": 20,
            "content": "{{product_1_name}}",
            "fontSize": 11,
            "fontFamily": "Arial",
            "color": "#212529"
        },
        {
            "id": "product-1-qty",
            "type": "text",
            "x": 350,
            "y": 315,
            "width": 60,
            "height": 20,
            "content": "{{product_1_quantity}}",
            "fontSize": 11,
            "fontFamily": "Arial",
            "color": "#212529",
            "textAlign": "center"
        },
        {
            "id": "product-1-price",
            "type": "text",
            "x": 420,
            "y": 315,
            "width": 80,
            "height": 20,
            "content": "{{product_1_price}}",
            "fontSize": 11,
            "fontFamily": "Arial",
            "color": "#212529",
            "textAlign": "right"
        },
        {
            "id": "product-1-total",
            "type": "text",
            "x": 510,
            "y": 315,
            "width": 40,
            "height": 20,
            "content": "{{product_1_total}}",
            "fontSize": 11,
            "fontFamily": "Arial",
            "color": "#212529",
            "textAlign": "right"
        },
        {
            "id": "total-section",
            "type": "rectangle",
            "x": 350,
            "y": 700,
            "width": 205,
            "height": 80,
            "fillColor": "#f8f9fa",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1,
            "borderRadius": 4
        },
        {
            "id": "total-label",
            "type": "text",
            "x": 360,
            "y": 710,
            "width": 80,
            "height": 20,
            "content": "Total TTC :",
            "fontSize": 14,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529"
        },
        {
            "id": "total-amount",
            "type": "text",
            "x": 450,
            "y": 710,
            "width": 95,
            "height": 20,
            "content": "{{order_total}}",
            "fontSize": 14,
            "fontFamily": "Arial",
            "fontWeight": "bold",
            "color": "#212529",
            "textAlign": "right"
        },
        {
            "id": "footer-rect",
            "type": "rectangle",
            "x": 20,
            "y": 800,
            "width": 555,
            "height": 22,
            "fillColor": "#f8f9fa",
            "strokeColor": "#dee2e6",
            "strokeWidth": 1,
            "borderRadius": 4
        },
        {
            "id": "footer-text",
            "type": "text",
            "x": 30,
            "y": 805,
            "width": 535,
            "height": 15,
            "content": "Merci pour votre confiance - {{company_name}}",
            "fontSize": 10,
            "fontFamily": "Arial",
            "color": "#6c757d",
            "textAlign": "center"
        }
    ],
    "variables": {
        "company_name": {
            "type": "text",
            "default": "Votre Société SARL",
            "required": true,
            "label": "Nom de l'entreprise"
        },
        "company_address": {
            "type": "textarea",
            "default": "123 Rue de l'Entreprise\n75001 Paris\nFrance",
            "required": true,
            "label": "Adresse de l'entreprise"
        },
        "customer_name": {
            "type": "text",
            "default": "Jean Dupont",
            "required": true,
            "label": "Nom du client"
        },
        "customer_address": {
            "type": "textarea",
            "default": "456 Avenue des Clients\n69000 Lyon\nFrance",
            "required": true,
            "label": "Adresse du client"
        },
        "order_number": {
            "type": "text",
            "default": "INV-2025-001",
            "required": true,
            "label": "Numéro de commande"
        },
        "current_date": {
            "type": "date",
            "default": "2025-11-04",
            "required": true,
            "label": "Date"
        },
        "product_1_name": {
            "type": "text",
            "default": "Produit 1",
            "required": false,
            "label": "Nom du produit 1"
        },
        "product_1_quantity": {
            "type": "number",
            "default": "1",
            "required": false,
            "label": "Quantité produit 1"
        },
        "product_1_price": {
            "type": "text",
            "default": "100,00 €",
            "required": false,
            "label": "Prix produit 1"
        },
        "product_1_total": {
            "type": "text",
            "default": "100,00 €",
            "required": false,
            "label": "Total produit 1"
        },
        "order_total": {
            "type": "text",
            "default": "100,00 €",
            "required": true,
            "label": "Total de la commande"
        }
    }
    }
}