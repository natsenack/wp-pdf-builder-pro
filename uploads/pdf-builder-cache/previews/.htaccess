# Autoriser l'accès aux fichiers PDF d'aperçu
<IfModule mod_authz_core.c>
    Require all granted
</IfModule>

# Alternative pour les anciens serveurs
<IfModule !mod_authz_core.c>
    Order allow,deny
    Allow from all
</IfModule>

# Forcer le type de contenu
<FilesMatch "\.pdf$">
    AddType application/pdf .pdf
    Header set Content-Type "application/pdf"
</FilesMatch>
